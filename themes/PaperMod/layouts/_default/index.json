{{- $index := slice -}}
{{- range site.RegularPages -}}
    {{- $tips := "" -}}
    {{- $matches := findRE "(?s)\\{\\{< tag \".*?\" >\\}\\}\\s*(.*?)\\s*\\{\\{< /toggle >\\}\\}" .RawContent -}}
    {{- range $matches -}}
        {{- $clean := . | replaceRE "(?s)\\{\\{< tag \".*?\" >\\}\\}" "" | replaceRE "\\{\\{< /toggle >\\}\\}" "" -}}
        {{- $tips = printf "%s %s" $tips $clean -}}
    {{- end -}}
    {{- $item := dict "title" .Title "summary" .Summary "permalink" .Permalink "tips" $tips -}}
    {{- $index = $index | append $item -}}
{{- end -}}
{{- $index | jsonify -}}